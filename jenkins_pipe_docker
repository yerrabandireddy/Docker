pipeline{
    agent any
    parameters{
        choice(name: "docker", choices: "docker1\nabc", descriprion: "building my docker image")
        string(name: "workspace", description: "give some name")
    }
    stages{
        stage("cloaning"){
        steps{
            checkout([$class: 'GitScm',
            branches: [name: "origin/master"],
            userRemoteConfigs: [url: " https://github.com/yerrabandireddy/Docker.git"]])
        }
        }
        stage("buildimg an image"){
            when {
                expresstion {
                    params.docker == docker1
                }
                }
                                steps{
                    sh """
                    docker build tomcat
                    """
            }
        }

    }
}    
